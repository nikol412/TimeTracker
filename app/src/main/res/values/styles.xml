<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="title_big">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="medium_text">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="small_description_text" parent="medium_text">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>