<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="colorSurface">@color/appColorSurface</item>


    </style>


    <style name="title_big">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="medium_text">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="small_description_text" parent="medium_text">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_task_item_title">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_task_item_description">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="create_task_text_view">
        <item name="android:background">@drawable/rounded_corner_text_view</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="create_task_description">
        <item name="android:background">@drawable/rounded_corner_small</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:lines">4</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="create_task_name">
        <item name="android:background">@drawable/rounded_corner_small</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>

        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>
</resources>